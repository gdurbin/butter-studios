---
// Components
import Head from "@components/BaseHead.astro";
import Header from "@components/BaseHeader.astro";
import Footer from "@components/BaseFooter.astro";

// Props
const {
  pageTitle = "Butter Studios",
  metaTitle,
  metaDescription,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="min-h-screen">
  <Head
    pageTitle={pageTitle}
    metaTitle={metaTitle}
    metaDescription={metaDescription}
  />
  <body
    class="flex flex-col min-h-screen bg-white dark:bg-gray-900 antialiased"
  >
    <Header />
    <main class="grow">
      <slot />
    </main>
    <Footer />

    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
    <!-- <style>
      main {
        min-height: calc(100svh - 116px);
      }
    </style> -->
  </body>
</html>
